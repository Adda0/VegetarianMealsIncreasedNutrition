<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vegetarian Meals [1.0]</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName = "CookMealFineVeg"]/ingredients/li/count</xpath>
					<value>
						<count>0.625</count>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName = "CookMealLavishVeg"]/ingredients/li/count</xpath>
					<value>
						<count>1.5</count>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName = "CookMealSurvivalVeg"]/ingredients/li/count</xpath>
					<value>
						<count>0.9</count>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple Bulk Cooking Patches</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName = "CookMealFineVegBulk"]/ingredients/li/count</xpath>
					<value>
						<count>2.5</count>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName = "CookMealLavishVegBulk"]/ingredients/li/count</xpath>
					<value>
						<count>6</count>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName = "CookMealSurvivalVegBulk"]/ingredients/li/count</xpath>
					<value>
						<count>3.6</count>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>